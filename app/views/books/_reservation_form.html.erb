
  <% @reservation.errors.full_messages.each do |error| %>
    <%= error %>
  <% end %>

  <%= form_for @reservation, url: reservations_book_path do |f| %>

    <%= f.label :user_name %>
    <%= f.text_field :user_name,  class: 'form-control' %>

    <%= f.label :due_date %>
    <%= f.date_field :due_date,  class: 'form-control' %>

    <%= f.label :return_date %>
    <%= f.date_field :return_date,  class: 'form-control' %>

    <%= f.submit class: "btn btn-primary"%>

  <% end %>
