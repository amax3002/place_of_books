
  <% @book.errors.full_messages.each do |error| %>
    <%= error %>
  <% end %>

  <%= form_for @book do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name,  class: 'form-control' %>

    <%= f.label :isbn %>
    <%= f.text_field :isbn,  class: 'form-control' %>

    <%= f.label :description %>
    <%= f.text_field :description,  class: 'form-control' %>

    <%= f.submit class: "btn btn-primary"%>

  <% end %>
